@model EntityLayer.Concrete.Experience

@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Deneyim Ekleme Sayfası</h3>
</div>
@using (Html.BeginForm("AddExperience", "Experience", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
                <div class="card">
    <div class="card-body">
        <p class="card-description">Yeni Deneyim Ekle</p>
        <form class="forms-sample">
            <div class="form-group">
                <label for="exampleInputName1">Başlık</label>
                <input type="text" class="form-control" name="ExperienceName">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail3">Deneyim Süresi</label>
                <input type="text" class="form-control" name="ExperienceDate">
            </div> 
            <div class="form-group">
                <label for="exampleInputEmail3">Resim Yolu</label>
                <input type="text" class="form-control" name="ImageUrl" placeholder="Resim Yolu">
            </div>          
    
            <div class="form-group">
                <label for="exampleTextarea1">Açıklama</label>
                <textarea class="form-control" name="Description" rows="4"></textarea>
            </div>
            <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
            <a href="@Url.Action("Index","Experience")" class="btn btn-dark">İptal</a>
        </form>
    </div>
    </div>
    </div>
}