@model EntityLayer.Concrete.Experience

@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


@using (Html.BeginForm("EditExperience", "Experience", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description">Deneyim Güncelleme</p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputName1">ID</label>
                        <input type="text" class="form-control" name="ExperienceID" value="@Model.ExperienceID" readonly>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Başlık</label>
                        <input type="text" class="form-control" name="ExperienceName" value="@Model.ExperienceName">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Deneyim Süresi</label>
                        <input type="text" class="form-control" name="ExperienceDate" value="@Model.ExperienceDate">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Resim Yolu</label>
                        <input type="text" class="form-control" name="ImageUrl" value="@Model.ImageUrl"/>
                    </div>

                    <div class="form-group">
                        <label for="exampleTextarea1">Açıklama</label>
                        <textarea class="form-control" name="Description" rows="4">@Model.Description</textarea>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <a href="@Url.Action("Index","Experience")" class="btn btn-dark">İptal</a>
                </form>
            </div>
        </div>
    </div>
}